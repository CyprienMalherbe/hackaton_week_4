<!DOCTYPE html>
<html>

<head>
  <title>
    <Plop>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>

  <!-- MENU NAVIGATION -->
  <div class="menu">
    <div class="sous-menu">
      <img id="logo" src="/images/train.png" alt=""> <!-- logo -->
      <a id="ticketac" class="nav-text nav-link active" href="#">Ticketac</a>
    </div>

    <div class="sous-menu">
      <a class="nav-text nav-link" href="#">Connection</a>
      <a class="nav-text nav-link" href="#">My last trips</a>
    </div>
  </div>

  <!-- GRID -->
  <div class="container">

    <div class="row">

      <div class="col-12 text-center"></div>

      <!-- SEARCH -->
      <div class="col-12 offset-lg-3 col-lg-6 text-center">
        <form class="form" action="/result-search" method="POST">

          <h3 class="text-white">Sign-In :</h3>

          <div class="form-group-inline">
            <label for="exampleInputEmail1"></label>
            <input list="departureCities" class="form-control" id="departurecities" name="departureCity"
              placeholder="Departure city" aria-describedby="emailHelp">
          </div>

          <div class="form-group-inline">
            <label for="exampleInputPassword1"></label>
            <input list="arrivalCities" class="form-control" placeholder="Arrival city" name="arrivalCity"
              id="arrivalcities">
          </div>

          <div class="form-group-inline">
            <label for="exampleInputPassword1"></label>
            <input type="date" class="form-control" placeholder="Password" name="dateDeparture"
              id="exampleInputPassword2">
          </div>

          <div class="form-group-inline">
            <button type="submit" class="btn btn-primary">Confirm</button>
          </div>

        </form>

        <datalist id="departureCities">
          <%for (i in dataCitiesDeparture) { %>
            <option>
              <%=dataCitiesDeparture[i]._id.departureCity%>
            </option>
            <%}%>


      </div>





    </div> <!-- close main row -->
  </div> <!-- close container -->


  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>