<!DOCTYPE html>
<html>

<head>
  <title>
    <Plop>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>

  <%- include('nav-menu'); %>

    <!-- GRID -->
    <div class="container">

      <div class="row">

        <div class="col-12 offset-lg-2 col-lg-8 text-center">

          <h3 class="title-shift">My tickets</h3>

          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Journey</th>
                <th scope="col">Date</th>
                <th scope="col">Departure Time</th>
                <th scope="col">Price</th>
              </tr>
            </thead>
            <tbody>

              <% for (var i=0; i< dataJourney.length; i++) { %>

                <tr>
                  <th scope="row"><%=i+1 %></th>
                  <td><%= dataJourney[i].departure %></td>
                  <td><%= dateFormat(dataJourney[i].date) %></td>
                  <td><%= dataJourney[i].departureTime %></td>
                  <td class="price"><%= dataJourney[i].price %>â‚¬</td>
                </tr>

                <% } %>

            </tbody>
          </table>

          <div class="col-12 offset-lg-9 col-lg-2 validate-btn">
            <a href="/" class="tile-elm btn btn-primary">Go to payment</a>
          </div>

        </div>


      </div> <!-- close main row -->
    </div> <!-- close container -->


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>