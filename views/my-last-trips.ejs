<!DOCTYPE html>
<html>

<head>
  <title>
    <Plop>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>

  <%- include('nav-menu'); %>

    <!-- GRID -->
    <div class="container">

      <div class="row">

        <div class="col-12 offset-lg-2 col-lg-8 text-center">

          <h3 class="title-shift">My last trips</h3>

          <table class="table">
            <thead>
              <tr>
                <th scope="col">Journey</th>
                <th scope="col">Date</th>
                <th scope="col">Departure Time</th>
                <th scope="col">Price</th>
              </tr>
            </thead>
            <tbody>
              <% for (var i=0; i<data.userJourneys.length; i++) { %>
              <tr>
                <td><%= data.userJourneys[i].departure %> / <%= data.userJourneys[i].arrival %></td>
                <td><%= dateFormat(data.userJourneys[i].date) %></td>
                <td><%= data.userJourneys[i].departureTime %></td>
                <td class="price"><%= data.userJourneys[i].price %>â‚¬</td>
             

              </tr>
            <% } %>              
            </tbody>
          </table>

          <div class="col-12 offset-lg-8 col-lg-2 validate-btn">
            <a href="/" class="tile-elm btn btn-primary">Go home</a>
          </div>

        </div>


      </div> <!-- close main row -->
    </div> <!-- close container -->


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>