<!DOCTYPE html>
<html>

<head>
  <title>
    <Plop>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>
  <!-- MENU NAVIGATION -->
  <div class="menu">
    <div class="sous-menu">
      <img id="logo" src="/images/train.png" alt=""> <!-- logo -->
      <a id="ticketac" class="nav-text nav-link active" href="#">Ticketac</a>
    </div>
  
    <div class="sous-menu">
      <a class="nav-text nav-link" href="#">Connection</a>
      <a class="nav-text nav-link" href="#">My last trips</a>
    </div>
  </div>

  <!-- GRID -->
  <div class="container">

    <div class="row">

      <div class="col-12 text-center"></div>

      <!-- Sign-in -->
      <div class="col-12 offset-lg-3 col-lg-3 text-center">
        <form class="form" action="users/sign-in" method="POST">
          <h3 class="text-white">Sign-In :</h3>
          <div class="form-group">
            <label></label>
            <input type="email" class="form-control" id="signinmail" name="signinmail" placeholder="Email"
              aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label></label>
            <input type="password" class="form-control" placeholder="Password" id="signinpassword" name="signinpassword">
          </div>
          <button type="submit" class="btn btn-primary">Confirm</button>
        </form>
      </div>

      <!-- Sign-up -->
      <div class="col-12 col-lg-3 text-center">
        <form class="form" action="/users/sign-up" method="POST">
          <h3 class="text-white">Sign-up :</h3>
          <div class="form-group">
            <label></label>
            <input type="text" class="form-control" id="firstname" placeholder="Last Name" name="lastname">
          </div>
          <div class="form-group">
            <label></label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="First Name" name="firstname">
          </div>
          <div class="form-group">
            <label></label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email"
              aria-describedby="emailHelp" name="signupmail">
          </div>
          <div class="form-group">
            <label></label>
            <input type="password" class="form-control" placeholder="Password" id="signuppassword" name="signuppassword">
          </div>
          <button type="submit" class="btn btn-primary">Confirm</button>
        </form>
      </div>


    </div> <!-- close main row -->
  </div> <!-- close container -->


  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>
