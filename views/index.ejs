<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>
  <!-- MENU NAVIGATION -->
  
  <nav class="nav">
    <div class="menu">
      <img src="/images/train.png" alt=""> <!-- logo -->
      <a class="nav-link active" href="#">Ticketac</a>
    </div>
    <div class="menu">
      <a class="nav-link" href="#">Connection</a>
      <a class="nav-link" href="#">My last trips</a>
    </div>
  </nav>

  <!-- GRID -->
  <div class="container">

    <div class="row">

      <div class="col-12 text-center"></div>

      <!-- Sign-in -->
      <div class="col-12 offset-lg-3 col-lg-3 text-center">
        <form class="form">
          <h3 class="text-white">Sign-In :</h3>
          <div class="form-group">
            <label for="exampleInputEmail1"></label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1"></label>
            <input type="password" class="form-control" placeholder="Password" id="exampleInputPassword1">
          </div>
          <button type="submit" class="btn btn-primary">Confirm</button>
        </form>
      </div>

      <!-- Sign-up -->
      <div class="col-12 col-lg-3 text-center">
        <form class="form">
          <h3 class="text-white">Sign-up :</h3>
          <div class="form-group">
            <label for="exampleInputEmail1"></label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Name" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1"></label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="FirstName" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1"></label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" aria-describedby="emailHelp">

          </div>
          <div class="form-group">
            <label for="exampleInputPassword1"></label>
            <input type="password" class="form-control" placeholder="Password" id="exampleInputPassword1">
          </div>
          <button type="submit" class="btn btn-primary">Confirm</button>
        </form>
      </div>


    </div> <!-- close main row -->
  </div> <!-- close container -->


  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>
